<% include partials/header %>

<h1 class="text-center">
  <% if (user.name) { %>
    <%= user.name %>'s PetFolio
  <% } else { %>
    <%= user.username %>'s PetFolio
  <% } %>
</h1>

<div class="d-flex flex-row flex-wrap pet-container">
  <% user.pets.forEach(function(pet){ %>
    <div class="pet-card">
      <a class="text-decoration-none" href="/pets/<%= pet._id %>">
        <img class="pet-card-img" src="<%= pet.avatar %>" alt="">
        <p class="pet-card-name"><%= pet.name %></p>
      </a>
    </div>

  <% }); %>
</div>

<% include partials/footer %>
