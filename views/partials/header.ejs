<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>PetFolio</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet">

    <!-- Font awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- Local stylesheet -->
    <link rel="stylesheet" href="/stylesheets/styles.css">
  </head>

  <body>

<!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/pets">PetFolio</a>

      <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item ml-auto">
            <a class="nav-link" href="/pets">Home</a>
          </li>

          <% if (!currUser) { %>
            <li class="nav-item ml-auto">
              <a id="register-btn" class="nav-link">Register</a>
            </li>
            <li class="nav-item ml-auto">
              <a id="login-btn" class="nav-link">Login</a>
            </li>
          <% } else { %>
            <li class="nav-item ml-auto">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <li class="nav-item ml-auto">
              <a class="nav-link" href="/secrets">Secrets</a>
            </li>
          <% } %>


        </ul>
      </div>
    </nav>


<!-- Invisible Register Form Card PopUp -->
<div id="register-form" class="d-none">
  <div class="card pop-up-card p-4">
    <i class="fas fa-window-close fa-2x ml-auto text-secondary"></i>
    <h1 class="display-4 text-center">Register</h1>

    <!-- OAuth -->
    <a class="btn btn-lg mt-3 btn-danger" href="/auth/google" role="button">
      <i class="fab fa-google fa-lg mr-2"></i>
      Sign Up with Google
    </a>

    <a class="btn btn-lg mt-2 btn-primary mb-3" href="/auth/facebook" role="button">
      <i class="fab fa-facebook fa-lg mr-2"></i>
      Sign Up with Facebook
    </a>

    <!-- Local Auth -->
    <form class="" action="/register" method="post">
      <input class="form-control form-control-lg mb-2" type="text" name="username" placeholder="Enter a Username" required>
      <input class="form-control form-control-lg mb-2" type="password" name="password"
        placeholder="Enter a Password" minlength="8" required>
      <div class="text-center">
        <button class="btn btn-lg btn-info w-100" type="submit" name="button">Sign Up</button>
      </div>
    </form>

  </div>
</div>

<!-- Invisible Login Form Card PopUp -->
<div id="login-form" class="d-none">
  <div class="card pop-up-card p-4">
    <i class="fas fa-window-close fa-2x ml-auto text-secondary"></i>
    <h1 class="display-4 text-center">Login</h1>

    <!-- OAuth -->
    <a class="btn btn-lg mt-3 btn-danger" href="/auth/google" role="button">
      <i class="fab fa-google fa-lg mr-2"></i>
      Sign In with Google
    </a>

    <a class="btn btn-lg mt-2 btn-primary mb-3" href="/auth/facebook" role="button">
      <i class="fab fa-facebook fa-lg mr-2"></i>
      Sign In with Facebook
    </a>

    <!-- Local Auth -->
    <form class="" action="/login" method="post">
      <input class="form-control form-control-lg mb-2" type="text" name="username" placeholder="Username" required>
      <input class="form-control form-control-lg mb-2" type="password" name="password" placeholder="Password" required>
      <div class="text-center">
        <button class="btn btn-lg btn-info w-100" type="submit" name="button">Sign In</button>
      </div>
    </form>

  </div>
</div>
