<%- include ../partials/header %>

<h1 class="display-1 text-center">Edit Comment</h1>

<form class="text-center"
  action="/pets/<%= pet_id %>/imgs/<%= img_id %>/comments/<%= comment_idx %>?_method=PUT"
  method="post">
  <textarea class="form-control form-control-lg my-5 p-3 rounded-0"
    name="text" rows="8" cols="5">
    <%= comment.text %>
  </textarea>
  <button class="btn btn-xl btn-primary"
    type="submit" name="button">Save Edits</button>
</form>



<!-- Button trigger modal -->
<div class="text-center mt-5">
  <button type="button" class="btn btn-outline-danger"
    data-toggle="modal" data-target="#deleteModal">
    Delete Comment
  </button>
</div>


<!-- Modal -->
<div class="modal fade delete-modal" id="deleteModal" tabindex="-1" role="dialog"
  aria-labelledby="deleteModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title text-center" id="deleteModal">
          Delete Comment
        </h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        Are you sure?
      </div>

      <div class="mb-4">
        <form class="" action="/pets/<%= pet_id %>/imgs/<%= img_id %>/comments/<%= comment_idx %>?_method=DELETE"
        method="post">
          <div class="d-flex flex-row justify-content-around">
            <button type="button" class="btn btn-secondary btn-lg" data-dismiss="modal">No, Cancel</button>

            <button type="submit" class="btn btn-danger btn-lg">Yes, Delete</button>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>


<%- include ../partials/footer %>
